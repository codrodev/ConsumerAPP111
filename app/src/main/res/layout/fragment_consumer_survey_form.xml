<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.fragments.ConsumerSurveyFormFragment">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btnSubmit"
            android:layout_marginTop="@dimen/dim30">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dim5"
                android:layout_marginVertical="2dp"
                android:gravity="left"
                android:orientation="vertical"
                android:padding="@dimen/dim5">

                <EditText
                    android:id="@+id/editSelectedLocation"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:paddingVertical="@dimen/dim5"
                    android:paddingHorizontal="@dimen/dim10"
                    android:hint="COORDINATES"
                    android:visibility="gone"
                    android:background="@drawable/editbox_outline"/>
                <EditText
                    android:id="@+id/editbuildingid"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:hint="Building ID"
                    android:paddingVertical="@dimen/dim5"
                    android:paddingHorizontal="@dimen/dim10"
                    android:background="@drawable/editbox_outline"/>

                <EditText
                    android:id="@+id/editcustomernoexiting"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:hint="CUSTOMER NO. (EXISTING)"
                    android:paddingVertical="@dimen/dim5"
                    android:paddingHorizontal="@dimen/dim10"
                    android:background="@drawable/editbox_outline"/>

                <EditText
                    android:id="@+id/editCustomername"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:hint="Consumer Name"
                    android:paddingVertical="@dimen/dim5"
                    android:paddingHorizontal="@dimen/dim10"
                    android:background="@drawable/editbox_outline"/>

                <EditText
                    android:id="@+id/editFathername"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim50"
                    android:layout_margin="5dp"
                    android:hint="Father/ Husband Name"
                    android:paddingVertical="@dimen/dim5"
                    android:paddingHorizontal="@dimen/dim10"
                    android:background="@drawable/editbox_outline"/>

                <EditText
                    android:id="@+id/editOccupantName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:hint="Occupant Name"
                    android:paddingVertical="@dimen/dim5"
                    android:paddingHorizontal="@dimen/dim10"
                    android:background="@drawable/editbox_outline"/>

                <EditText
                    android:id="@+id/editTowerPlotFlatHouseShopNo"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:hint="Tower/Plot/Flat/House/Shop No"
                    android:paddingVertical="@dimen/dim5"
                    android:paddingHorizontal="@dimen/dim10"
                    android:background="@drawable/editbox_outline"/>
                <EditText
                    android:id="@+id/editBuildingApartmentName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:hint="Building/ Apartment Name"
                    android:paddingVertical="@dimen/dim5"
                    android:paddingHorizontal="@dimen/dim10"
                    android:background="@drawable/editbox_outline"/>

                <EditText
                    android:id="@+id/editBlockPocketNo"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:hint="Block/Pocket No"
                    android:paddingVertical="@dimen/dim5"
                    android:paddingHorizontal="@dimen/dim10"
                    android:background="@drawable/editbox_outline"/>
                <EditText
                    android:id="@+id/editSectorColonyName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:hint="Sector/Colony Name"
                    android:paddingVertical="@dimen/dim5"
                    android:paddingHorizontal="@dimen/dim10"
                    android:background="@drawable/editbox_outline"/>
                <EditText
                    android:id="@+id/editLocalityName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:hint="Locality Name"
                    android:paddingVertical="@dimen/dim5"
                    android:paddingHorizontal="@dimen/dim10"
                    android:background="@drawable/editbox_outline"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rural/Urban"
                    android:layout_marginTop="5dp"
                    android:layout_marginHorizontal="5dp"/>
                <Spinner
                    android:id="@+id/spinRuralurban"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="2dp"
                    android:spinnerMode="dropdown"
                    android:background="@color/control_tint"/>
                <EditText
                    android:id="@+id/editCityVillageName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:hint="City/Village Name"
                    android:paddingVertical="@dimen/dim5"
                    android:paddingHorizontal="@dimen/dim10"
                    android:background="@drawable/editbox_outline"/>
                <EditText
                    android:id="@+id/editPincode"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:hint="Pin code"
                    android:inputType="number"
                    android:ems="6"
                    android:maxEms="6"
                    android:maxLength="6"
                    android:paddingVertical="@dimen/dim5"
                    android:paddingHorizontal="@dimen/dim10"
                    android:background="@drawable/editbox_outline"/>
                <EditText
                    android:id="@+id/editSanctionedLoad"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:hint="Sanctioned Load"
                    android:paddingVertical="@dimen/dim5"
                    android:paddingHorizontal="@dimen/dim10"
                    android:background="@drawable/editbox_outline"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:layout_marginTop="5dp"
                    android:layout_marginHorizontal="5dp"/>
                <Spinner
                    android:id="@+id/spinCategory"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="2dp"
                    android:spinnerMode="dropdown"
                    android:background="@color/control_tint"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Supply Voltage"
                    android:layout_marginTop="5dp"
                    android:layout_marginHorizontal="5dp"/>
                <Spinner
                    android:id="@+id/spinSupplyVoltage"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="2dp"
                    android:spinnerMode="dropdown"
                    android:background="@color/control_tint"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Of Phases"
                    android:layout_marginTop="5dp"
                    android:layout_marginHorizontal="5dp"/>
                <Spinner
                    android:id="@+id/spinNoOfPhases"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="2dp"
                    android:spinnerMode="dropdown"
                    android:background="@color/control_tint"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connection Status"
                    android:layout_marginTop="5dp"
                    android:layout_marginHorizontal="5dp"/>
                <Spinner
                    android:id="@+id/spinConnectionStatus"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="2dp"
                    android:spinnerMode="dropdown"
                    android:background="@color/control_tint"/>
                <EditText
                    android:id="@+id/editmeterno"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:paddingVertical="@dimen/dim5"
                    android:paddingHorizontal="@dimen/dim10"
                    android:background="@drawable/editbox_outline"
                    android:hint="Meter No"/>
                <EditText
                    android:id="@+id/editDTID"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:paddingVertical="@dimen/dim5"
                    android:paddingHorizontal="@dimen/dim10"
                    android:visibility="gone"
                    android:background="@drawable/editbox_outline"
                    android:hint="DT ID"/>

                <EditText
                    android:id="@+id/editFeederName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:paddingVertical="@dimen/dim5"
                    android:paddingHorizontal="@dimen/dim10"
                    android:visibility="gone"
                    android:background="@drawable/editbox_outline"
                    android:hint="Feeder Name"/>

                <EditText
                    android:id="@+id/editStationName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:paddingVertical="@dimen/dim5"
                    android:paddingHorizontal="@dimen/dim10"
                    android:background="@drawable/editbox_outline"
                    android:hint="Station Name"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pole/FP/SP GPS ID"
                    android:layout_marginTop="5dp"
                    android:layout_marginHorizontal="5dp"/>
                <Spinner
                    android:id="@+id/spinPoleFPSPGPSID"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="2dp"
                    android:spinnerMode="dropdown"
                    android:background="@color/control_tint"/>
                <EditText
                    android:id="@+id/editLeftRightsideHouseCustomerNo"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:paddingVertical="@dimen/dim5"
                    android:paddingHorizontal="@dimen/dim10"
                    android:background="@drawable/editbox_outline"
                    android:hint="Left/Right side House Customer No."/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Physical location of meter "
                    android:layout_marginTop="5dp"
                    android:layout_marginHorizontal="5dp"/>
                <Spinner
                    android:id="@+id/spinPhysicallocationofmeter"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="2dp"
                    android:spinnerMode="dropdown"
                    android:background="@color/control_tint"/>
                <EditText
                    android:id="@+id/editHeightofMounting"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:paddingVertical="@dimen/dim5"
                    android:paddingHorizontal="@dimen/dim10"
                    android:background="@drawable/editbox_outline"
                    android:hint="Height of Mounting"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Viewing Glass"
                    android:layout_marginTop="5dp"
                    android:layout_marginHorizontal="5dp"/>
                <Spinner
                    android:id="@+id/spinViewingGlass"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="2dp"
                    android:spinnerMode="dropdown"
                    android:background="@color/control_tint"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type of Meter"
                    android:layout_marginTop="5dp"
                    android:layout_marginHorizontal="5dp"/>
                <Spinner
                    android:id="@+id/spinTypeofMeter"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="2dp"
                    android:spinnerMode="dropdown"
                    android:background="@color/control_tint"/>
                <EditText
                    android:id="@+id/editMakeandClass"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:paddingVertical="@dimen/dim5"
                    android:paddingHorizontal="@dimen/dim10"
                    android:background="@drawable/editbox_outline"
                    android:hint="Make and Class"/>
                <EditText
                    android:id="@+id/editSealNo"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:paddingVertical="@dimen/dim5"
                    android:paddingHorizontal="@dimen/dim10"
                    android:background="@drawable/editbox_outline"
                    android:hint="Seal No."/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seal"
                    android:layout_marginTop="5dp"
                    android:layout_marginHorizontal="5dp"/>
                <Spinner
                    android:id="@+id/spinSeal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="2dp"
                    android:spinnerMode="dropdown"
                    android:background="@color/control_tint"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pole having multiple feeder"
                    android:layout_marginTop="5dp"
                    android:layout_marginHorizontal="5dp"/>
                <Spinner
                    android:id="@+id/spinPolehavingmultiplefeeder"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="2dp"
                    android:spinnerMode="dropdown"
                    android:background="@color/control_tint"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="5dp"
                    android:text="Take A Meter Picture" />
                <ImageView
                    android:id="@+id/imgCamera"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/camera"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="5dp"
                    android:text="Take A Bill Picture" />
                <ImageView
                    android:id="@+id/imgCamerabill"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/camera"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/dim5"
            android:text="Submit"
            android:background="@drawable/background_controls"
            android:textColor="@color/white"
            app:backgroundTint="@null"
            android:textAllCaps="false" />
    </RelativeLayout>
</layout>
