<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.fragments.BuildingFormFragment">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btnSubmit"
            android:layout_marginTop="@dimen/dim30">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dim5"
                android:layout_marginVertical="2dp"
                android:gravity="left"
                android:orientation="vertical"
                android:padding="@dimen/dim5">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_margin="5dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editBuildingID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="30dp"
                        android:hint="Building ID"
                        android:backgroundTint="@color/control_tint"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editBuildingName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="30dp"
                        android:hint="Building Name"
                        android:backgroundTint="@color/control_tint"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editBuildingAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="30dp"
                        android:hint="Addresses"
                        android:backgroundTint="@color/control_tint"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Building Type"
                    android:layout_marginTop="5dp"
                    android:layout_marginHorizontal="5dp"/>
                <Spinner
                    android:id="@+id/spinType"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="2dp"
                    android:spinnerMode="dropdown"
                    android:background="@color/control_tint"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editBuildingNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="30dp"
                        android:hint="Building Number"
                        android:backgroundTint="@color/control_tint"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editBuildingRefNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="30dp"
                        android:hint="Building Reference Number"
                        android:backgroundTint="@color/control_tint"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editBuildingContructionStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="30dp"
                        android:hint="Construction Status"
                        android:backgroundTint="@color/control_tint"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editBuildingDistric"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="30dp"
                        android:hint="District"
                        android:backgroundTint="@color/control_tint"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editBuildingNoofConnection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="30dp"
                        android:hint="No of Connections"
                        android:backgroundTint="@color/control_tint"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editBuildingNoofflat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="30dp"
                        android:hint="No of Flats"
                        android:backgroundTint="@color/control_tint"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editBuildingNooffloor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="30dp"
                        android:hint="No of Floors"
                        android:backgroundTint="@color/control_tint"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editBuildingNoofshop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="30dp"
                        android:hint="No of Shops"
                        android:backgroundTint="@color/control_tint"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editBuildingPincode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="30dp"
                        android:inputType="number"
                        android:maxLength="6"
                        android:maxEms="6"
                        android:hint="Pincode"
                        android:backgroundTint="@color/control_tint"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editBuildingSocityname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="30dp"
                        android:hint="Society Name"
                        android:backgroundTint="@color/control_tint"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editBuildingSublocality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="30dp"
                        android:hint="Sub Locality"
                        android:backgroundTint="@color/control_tint"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/dim5"
            android:layout_marginTop="@dimen/dim5"
            android:layout_marginEnd="@dimen/dim5"
            android:layout_marginBottom="@dimen/dim5"
            android:background="@drawable/background_controls"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:backgroundTint="@null" />
    </RelativeLayout>
</layout>
